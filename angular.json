{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "",
  "projects": {
    "example": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "inlineTemplate": true,
          "inlineStyle": true,
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:module": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "root": "apps/example",
      "sourceRoot": "apps/example/src",
      "prefix": "bb",
      "architect": {
        "build": {
          "builder": "@bb-cli/bb-ang:browser",
          "options": {
            "i18nMissingTranslation": "error",
            "localize": true,
            "outputPath": "dist/example",
            "index": "apps/example/src/index.html",
            "main": "apps/example/src/main.ts",
            "polyfills": "apps/example/src/polyfills.ts",
            "tsConfig": "apps/example/tsconfig.app.json",
            "aot": true,
            "assets": [
              {
                "input": "dist/custom-project-assets",
                "glob": "**/*",
                "output": "assets"
              },
              "apps/example/src/favicon.ico",
              "apps/example/src/assets"
            ],
            "styles": [],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/example/src/environments/environment.ts",
                  "with": "apps/example/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            },
            "shared": {
              "fileReplacements": [
                {
                  "replace": "apps/example/src/environments/environment.ts",
                  "with": "apps/example/src/environments/environment.shared.ts"
                }
              ]
            },
            "ar": {
              "localize": [
                "ar"
              ]
            },
            "en": {
              "localize": [
                "en"
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "example:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "example:build:production"
            },
            "en": {
              "browserTarget": "example:build:en",
              "port": 4200
            },
            "ar": {
              "browserTarget": "example:build:ar",
              "port": 4201
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "example:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "apps/example/src/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "apps/example/src/polyfills.ts",
            "tsConfig": "apps/example/src/../../../tsconfig.spec.json",
            "codeCoverage": true,
            "codeCoverageExclude": [
              "test.ts",
              "**/polyfills.ts"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "apps/example/tsconfig.app.json",
              "apps/example/src/../../../tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        },
      },
      "i18n": {
        "sourceLocale": "en",
        "locales": {
          "ar": "apps/example/src/locale/messages.ar.xlf"
        }
      }
    },
    "example-e2e": {
      "projectType": "application",
      "root": "apps/example-e2e",
      "prefix": "bb",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "apps/example-e2e/protractor.conf.js",
            "devServerTarget": "example:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "example:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": "apps/example-e2e/tsconfig.json",
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "sample-journey": {
      "projectType": "library",
      "root": "libs/sample-journey",
      "sourceRoot": "libs/sample-journey/src",
      "prefix": "bb",
      "architect": {
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "libs/sample-journey/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "apps/example/src/polyfills.ts",
            "tsConfig": "./tsconfig.spec.json",
            "codeCoverage": true,
            "codeCoverageExclude": [
              "test.ts",
              "**/polyfills.ts"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "files": [
              "libs/sample-journey/**/*.ts"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "cli": {
    "warnings": {
      "typescriptMismatch": false,
      "versionMismatch": false
    },
    "defaultCollection": "@bb-cli/schematics"
  },
  "defaultProject": "example"
}
